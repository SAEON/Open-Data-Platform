{
    "$id": "https://odp.saeon.ac.za/schema/catalog/saeon",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "if": {
        "properties": {
            "tags": {
                "type": "array",
                "contains": {
                    "type": "object",
                    "properties": {
                        "tag_id": {"const": "Record.Migrated"},
                        "data": {
                            "type": "object",
                            "properties": {
                                "published": {"const": true}
                            },
                            "required": ["published"]
                        }
                    },
                    "required": ["tag_id", "data"]
                }
            }
        }
    },
    "then": {
        "$comment": "Record was published in ODP v1"
    },
    "else": {
        "properties": {
            "validity": {
                "type": "object",
                "properties": {
                    "valid": {"const": true}
                },
                "required": ["valid"]
            },
            "tags": {
                "type": "array",
                "allOf": [
                    {
                        "contains": {
                            "type": "object",
                            "properties": {
                                "tag_id": {"const": "Collection.Ready"}
                            },
                            "required": ["tag_id"]
                        }
                    },
                    {
                        "contains": {
                            "type": "object",
                            "properties": {
                                "tag_id": {"const": "Record.QC"},
                                "data": {
                                    "type": "object",
                                    "properties": {
                                        "pass_": {"const": true}
                                    },
                                    "required": ["pass_"]
                                }
                            },
                            "required": ["tag_id", "data"]
                        }
                    }
                ]
            }
        }
    },
    "required": ["validity", "tags"]
}
