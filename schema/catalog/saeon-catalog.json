{
    "$id": "https://odp.saeon.ac.za/schema/catalog/saeon-catalog",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "properties": {
        "validity": {
            "type": "object",
            "properties": {
                "valid": {"const": true}
            },
            "required": ["valid"]
        },
        "flags": {
            "type": "array",
            "allOf": [
                {
                    "contains": {
                        "type": "object",
                        "properties": {
                            "flag_id": {"const": "collection-publish"}
                        },
                        "required": ["flag_id"]
                    }
                }
            ]
        },
        "tags": {
            "type": "array",
            "allOf": [
                {
                    "contains": {
                        "type": "object",
                        "properties": {
                            "tag_id": {"const": "record-qc"},
                            "data": {
                                "type": "object",
                                "properties": {
                                    "pass_": {"const": true}
                                },
                                "required": ["pass_"]
                            }
                        },
                        "required": ["tag_id", "data"]
                    }
                }
            ]
        }
    },
    "required": ["validity", "flags", "tags"]
}
