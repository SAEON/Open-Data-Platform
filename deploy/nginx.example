server {
    listen              80;
    server_name         odp2.saeon.dvn  odp2-admin.saeon.dvn;
    return 301          https://$host$request_uri;
}

server {
    listen              443 ssl;
    server_name         odp2.saeon.dvn;

    ssl_certificate     /etc/pki/tls/certs/odp-dev.crt;
    ssl_certificate_key /etc/pki/tls/private/odp-dev.key;

    access_log          /var/log/nginx/odp2-access.log;
    error_log           /var/log/nginx/odp2-error.log;

    # Identity Service
    location /id/ {
        proxy_pass          http://127.0.0.1:4022/;
        proxy_set_header    Host                $host;
        proxy_set_header    X-Real-IP           $remote_addr;
        proxy_set_header    X-Forwarded-For     $proxy_add_x_forwarded_for;
        proxy_set_header    X-Forwarded-Proto   $scheme;
        proxy_set_header    X-Forwarded-Prefix  /id;
    }

    # ODP Public API
    location /api/ {
        proxy_pass          http://127.0.0.1:4020/;
        proxy_set_header    Host                $host;
        proxy_set_header    X-Real-IP           $remote_addr;
        proxy_set_header    X-Forwarded-For     $proxy_add_x_forwarded_for;
        proxy_set_header    X-Forwarded-Proto   $scheme;
    }

    # Hydra Public API
    location /auth/ {
        proxy_pass          https://127.0.0.1:4444/;
        proxy_set_header    Host                $host;
        proxy_set_header    X-Real-IP           $remote_addr;
        proxy_set_header    X-Forwarded-For     $proxy_add_x_forwarded_for;
        proxy_set_header    X-Forwarded-Proto   $scheme;
    }
}

server {
    listen              443 ssl;
    server_name         odp2-admin.saeon.dvn;

    ssl_certificate     /etc/pki/tls/certs/odp-dev.crt;
    ssl_certificate_key /etc/pki/tls/private/odp-dev.key;

    access_log          /var/log/nginx/odp2-admin-access.log;
    error_log           /var/log/nginx/odp2-admin-error.log;

    # ODP Web UI
    location / {
        proxy_pass          http://127.0.0.1:4021/;
        proxy_set_header    Host                $host;
        proxy_set_header    X-Real-IP           $remote_addr;
        proxy_set_header    X-Forwarded-For     $proxy_add_x_forwarded_for;
        proxy_set_header    X-Forwarded-Proto   $scheme;
    }

    # Hydra Admin API
    location /hydra/ {
        proxy_pass          https://127.0.0.1:4445/;
        proxy_set_header    Host                $host;
        proxy_set_header    X-Real-IP           $remote_addr;
        proxy_set_header    X-Forwarded-For     $proxy_add_x_forwarded_for;
        proxy_set_header    X-Forwarded-Proto   $scheme;
    }
}
